<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.goaler.ballwar.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
        android:name="org.goaler.ballwar.app.BallWarApplication">
        <activity
            android:name="org.goaler.ballwar.app.activity.LauncherActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.goaler.ballwar.app.activity.HomePageActivity"
            android:screenOrientation="sensorLandscape"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="org.goaler.ballwar.app.activity.NewGameActivity"
            android:screenOrientation="sensorLandscape"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="org.goaler.ballwar.app.activity.UserInfoActivity"
            android:screenOrientation="sensorLandscape"
            android:label="@string/app_name">
        </activity>
    </application>

</manifest>
